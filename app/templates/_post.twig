<article class="post" role="article">
    <header>
        <h1 class="post_title">{% if standalone == false %}<a href="{{ permalink(post) }}" rel="bookmark" title="Permalink">{% endif %}{{ post.title }}{% if standalone == false %}</a>{% endif %}</h1>
        <p class="post_date">
             <a class="permalink" href="{{ permalink(post) }}" rel="bookmark" title="Permalink"><time datetime="{{ post.timestamp|date('c') }}" pubdate>{{ post.timestamp|date('F j, Y') }}</time></a>
        </p>
    </header>
    <div class="post_content">
        {{ post.content }}
    </div>
    <footer class="post_meta">
        {% if post.tags %}
            <p class="post_tags">Posted in {{ tag_links(post.tags) }}</p>
        {% endif %}
        {% if standalone %}
            <p class="post_nav">
                {% if post.prev %}
                    <a href="{{ permalink(post.prev) }}" class="post_prev" title="Previous Post: {{ post.prev.title }}">&larr; {{ post.prev.title }}</a>
                {% endif %}
                {% if post.next %}
                    <a href="{{ permalink(post.next) }}" class="post_next" title="Next Post: {{ post.next.title }}">{{ post.next.title }} &rarr;</a>
                {% endif %}
            </p>
        {% endif %}
    </footer>
</article>