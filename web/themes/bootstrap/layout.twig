<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block title %}{{ site.title }}{% endblock %}</title>

        <!-- meta -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="description" content="{% block meta_description %}{{ site.description }}{% endblock %}">
        {% block meta %}{% endblock %}
        
        <!-- css -->
        {{ theme_styles() }}

        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        <!-- icons -->
        {{ theme_icons() }}
    </head>
    <body class="{{ body_class() }}">
        {# Each layout section has a block for its container,
           so that you can override or completely remove it from inherited themes #}
          
        {% block nav_container %}
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/">{{ site.title }}</a>
                    </div>
                    
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav">
                            {% block nav_items %}
                                <li><a href="#about">About</a></li>
                                <li><a href="#services">Services</a></li>
                                <li><a href="#contact">Contact</a></li>
                            {% endblock %}
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container -->
            </nav>
        {% endblock %}
        {% block header_container %}
            <header class="hd">
                <div class="hd_inner container">
                    {# 'header' block can be overridden in inherited templates
                       to change columns and/or content while keeping the containing div in place #}
                    {% block header %}
                        {% block site_name %}
                            <h1 id="site_name"><a href="/">{{ site.title }}</a></h1>
                        {% endblock %}
                        {% block site_tagline %}
                            <h2 id="site_tagline">{{ site.tagline }}</h2>
                        {% endblock %}
                    {% endblock %}
                </div>
            </header>
        {% endblock %}

        {% block body_container %}
            <div class="bd">
                <div class="bd_inner container">
                    {% block body %}
                        <div id="main" role="main">
                            {% block page_title %}{% endblock %}
                            {% block main %}{% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}

        {% block footer_container %}
            <footer class="ft">
                <div class="ft_inner container">
                    {% block footer %}{% endblock %}
                </div>
            </footer>
        {% endblock %}

        <!-- javascript -->
        {% block javascripts %}
            {% include '@default/_google_analytics.twig' %}
            {% include '@default/_jquery.twig' %}
            {{ theme_javascripts() }}
        {% endblock %}
    </body>
</html>