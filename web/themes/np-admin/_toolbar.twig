<!-- START of NodePub Toolbar -->
<div id="np_admin" class="np_admin">
    <div id="np_toolbar_container" class="container">
        <div id="np_toolbar" class="row">
            <div id="np_icons" class="np_icons col-md-8 col-md-offset-1">
                <ul>
                    {% for item in toolbar %}
                        {% if loop.index <= 5  %}
                             <li class="{{ item.slug }}"><a href="{{ path(item.route) }}" data-panel="open">{{ font_icon(item.icon, 'fa-2x') }}{{ item.name }}</a></li>
                        {% endif %}
                    {% endfor %}
                    {% if toolbar|length > 5 %}
                        <li class="more">
                            <a href="{{ path('admin_settings') }}" data-panel="open">{{ font_icon('ellipsis-h', 'fa-2x') }}More</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <div id="np_userbox" class="col-md-2">
                <p>{{ username }}</p>
                <ul id="np_usernav">
                    <li><a href="{{ path('admin_user', {username: username }) }}">Account</a></li>
                    <li><a href="{# path('admin_logout') #}">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="np_panel_container" class="container np_hide">{# ajax inserts panels here #}</div>
    <a id="np_menu_toggle" href="#">{{ font_icon('caret-down', 'fa-2x') }}</a>
</div>

