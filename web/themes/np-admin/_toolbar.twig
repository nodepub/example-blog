<!-- START of Nodepub Toolbar -->
<div id="np_admin">
    <div id="np_toolbar_container">
        <div id="np_toolbar">
            <div id="np_icons" class="np_icons">
                <ul>
                    {% for item in toolbar %}
                        <li class="{{ item.slug }}"><a href="{{ path(item.route) }}" data-panel="open"><i class="icon-{{ item.icon }} icon-2x"></i>{{ item.name }}</a></li>
                    {% endfor %}
                    {% if toolbar|length > 4 %}
                        <li class="more">
                            <a href="{{ path('admin_settings') }}" data-panel="open"><i class="icon-ellipsis-horizontal icon-2x"></i>More</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            <div id="np_userbox">
                <p>{{ username }}</p>
                <ul id="np_usernav">
                    <li><a href="{{ path('admin_user', {username: username }) }}">Account</a></li>
                    <li><a href="{# path('admin_logout') #}">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="np_panel_container" class="container hide"></div>
    <a id="np_menu_toggle" href="{{ path('admin_dashboard') }}"><i class="icon-caret-down icon-2x"></i></a>
</div>
