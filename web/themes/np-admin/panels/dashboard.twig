{% extends '@np-admin/split_panel.twig' %}

{% block nav %}Dashboard{% endblock %}

{% block column_1 %}
    {% for header, actions in dashboard_actions[0] %}
        <h3>{{ header }}</h3>
        <ul>
        {% for action in actions %}
            <li><a href="{{ action.url }}">{{ action.name }}</a></li>
        {% endfor %}
        </ul>
    {% endfor %}
{% endblock %}

