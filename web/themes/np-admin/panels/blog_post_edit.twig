{% extends '@np-admin/panel.twig' %}

{% block panel_nav %}
    {{ panel_nav([{name: 'Blog', uri: path('admin_blog')},{name: post.title}]) }}
{% endblock %}

{% block panel_content %}

    <!-- <a href="#" class="np_icon_fullscreen -np_fullscreen">{{ font_icon('expand') }}</a> -->
    
    <a href="#" class="btn btn-default btn-sm -np_fullscreen">{{ font_icon('expand') }} Fullscreen</a>
    <a href="#" class="btn btn-default btn-sm">{{ font_icon('eye') }} Preview</a>
    
    <form action="{{ path('admin_blog_update_post', {post: post.id}) }}" role="form">

        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.rawContent) }}
            {{ form_widget(form.rawContent, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.tags) }}
            {{ form_widget(form.tags, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        {{ form_rest(form) }}
        
        <a href="{{ path('admin_blog') }}" class="btn btn-default">Cancel</a>
        <input type="submit" name="Save" class="btn btn-primary" />
    </form>
{% endblock %}